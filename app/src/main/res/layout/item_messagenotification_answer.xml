<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_4"
    android:paddingEnd="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12"
    android:paddingTop="@dimen/dp_17"
    tools:ignore="RtlCompat">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/item_createtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:gravity="center"
        android:minWidth="@dimen/dp_104"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        app:rv_backgroundColor="@color/color_CCCCCC"
        app:rv_cornerRadius="@dimen/dp_3"
        tools:text="2018.01.01 18:01" />

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_14"
        app:rv_backgroundColor="@android:color/white"
        app:rv_cornerRadius="@dimen/dp_3">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/message_answerHolder"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            tools:text="4月13日" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_form"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13"
                tools:text="题库-炬华科技收到回复跨境电商" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            tools:text="正确答案是B吗？" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_E6E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/message_check"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_right_in" />

        </LinearLayout>
    </com.flyco.roundview.RoundLinearLayout>

</LinearLayout>