<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".module.course.CourseListActivity">

    <include layout="@layout/titlebar_toolbar" />

    <com.ucfo.youcaiwx.widget.customview.LoadingLayout
        android:id="@+id/loadinglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_29"
                android:overScrollMode="never"
                app:xTabDividerWidthWidthText="true"
                app:xTabIndicatorColor="@color/colorAccent"
                app:xTabIndicatorHeight="@dimen/dp_2"
                app:xTabMode="scrollable"
                app:xTabSelectedTextColor="@color/color_333333"
                app:xTabSelectedTextSize="@dimen/sp_15"
                app:xTabTextColor="@color/color_999999"
                app:xTabTextSelectedBold="true"
                app:xTabTextSize="@dimen/sp_12" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

        </LinearLayout>

    </com.ucfo.youcaiwx.widget.customview.LoadingLayout>


</LinearLayout>