<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.ucfo.youcaiwx.module.login.RegisterSuccessActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_106"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_login_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_38"
        android:src="@mipmap/icon_blue_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo" />

    <TextView
        android:id="@+id/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:text="@string/login_register_success"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo2" />

    <Button
        android:id="@+id/btn_tosart"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_39"
        android:background="@drawable/bg_login_btn"
        android:stateListAnimator="@drawable/shape_selector_elevation"
        android:text="@string/login_tolearn"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tip_text" />


</android.support.constraint.ConstraintLayout>
