<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_49"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            tools:text="中文Part1" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btnToStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dp_23"
            android:minWidth="@dimen/dp_67"
            android:text="@string/learncenter_gotostudy3"
            android:textColor="@android:color/white"
            app:rv_backgroundColor="@color/colorPrimary"
            app:rv_isRadiusHalfHeight="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F7F9FB"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12">

        <com.ucfo.youcai.widget.customview.NestedListView
            android:id="@+id/nestedlistview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:divider="@color/color_E6E6E6"
            android:dividerHeight="@dimen/dp_1"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_E6E6E6"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/btn_lienar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSpread"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/icon_lc_indicator_bottom" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>