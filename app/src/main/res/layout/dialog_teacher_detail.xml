<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/teacher_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/icon_teacher_back"
        app:layout_constraintBottom_toTopOf="@+id/teacher_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacher_linear" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/teacher_icon"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:src="@mipmap/icon_account_btn"
        app:layout_constraintBottom_toTopOf="@+id/teacher_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacher_linear" />

    <com.flyco.roundview.RoundLinearLayout
        android:id="@+id/teacher_linear"
        android:layout_width="@dimen/dp_232"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_33"
        android:paddingEnd="@dimen/dp_13"
        android:paddingStart="@dimen/dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@android:color/white"
        app:rv_cornerRadius="@dimen/dp_5">

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_35"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            tools:text="杨桦" />

        <TextView
            android:id="@+id/teacher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@mipmap/icon_teacher_jux"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_20"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            tools:text="优财金牌讲师" />

        <TextView
            android:id="@+id/teacher_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            tools:text="CMA案例教学专家、CMA研究院院长
                        北美会计师、税务和财务实务服务专业人士CMA案例教学专家、
                        CMA研究院院长北美会计师、
                        税务和财务实务服务专业人士CMA案例教学专家" />
    </com.flyco.roundview.RoundLinearLayout>


    <ImageView
        android:id="@+id/dialog_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_44"
        android:clickable="true"
        android:src="@mipmap/icon_closebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teacher_linear" />

</android.support.constraint.ConstraintLayout>