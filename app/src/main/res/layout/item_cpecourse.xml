<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_14"
    android:paddingEnd="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12"
    android:paddingTop="@dimen/dp_14"
    tools:ignore="RtlCompat">

    <ImageView
        android:id="@+id/item_course_image"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_58"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_course_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="CMA中文高清网课全科（新纲）" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_course_teacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@mipmap/icon_citeacher"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                tools:text="杨晔、王谦" />

            <TextView
                android:id="@+id/item_course_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_0267FF"
                android:textSize="@dimen/sp_12"
                tools:text="CPE积分：5分" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/item_course_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/dp_58"
                android:paddingBottom="@dimen/dp_1"
                android:paddingEnd="@dimen/dp_5"
                android:paddingStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_1"
                android:textColor="@color/color_F88C00"
                app:rv_backgroundColor="@color/color_FEEEDB"
                app:rv_isRadiusHalfHeight="true"
                tools:text="¥28800" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_course_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11"
                tools:text="89人学习过" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>