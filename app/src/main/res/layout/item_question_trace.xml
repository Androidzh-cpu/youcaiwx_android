<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">
    <!--学员信息-->
    <LinearLayout
        android:id="@+id/answer_user_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_11">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/answer_icon"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/icon_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/answer_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                tools:text="木糖醇" />

            <TextView
                android:id="@+id/answer_createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                tools:text="14分钟前" />
        </LinearLayout>

        <TextView
            android:id="@+id/answer_replystatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/color_F99111"
            android:textSize="@dimen/sp_13"
            tools:text="老师已回复" />

        <TextView
            android:id="@+id/answer_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            tools:text="投诉" />
    </LinearLayout>
    <!--问题-->
    <TextView
        android:id="@+id/answer_userquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        tools:text="加权平均法把期初转入的成本都计入当期，不会造成成本的重会造成复计算吗？" />
    <!--学员问题图片-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/answer_imagelist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:minHeight="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/color_E6E6E6" />
</LinearLayout>