<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_18"
    android:paddingStart="@dimen/dp_12"
    tools:ignore="RtlCompat">

    <ImageView
        android:id="@+id/item_course_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/banner_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5">

        <TextView
            android:id="@+id/item_course_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="CMA中文高清网课"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_course_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="讲师:杨烨"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_11" />


            <TextView
                android:id="@+id/item_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2019-03-13"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>