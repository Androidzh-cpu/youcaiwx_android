<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12"
    tools:ignore="RtlCompat">

    <ImageView
        android:id="@+id/item_course_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_60" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_course_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            tools:text="CMA中文高清网课全科（新纲）" />

        <TextView
            android:id="@+id/item_course_author"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_11"
            tools:text="讲师：杨晔、王谦" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_course_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_home_purpleback"
                android:ellipsize="end"
                android:maxLines="1"
                android:minWidth="@dimen/dp_54"
                android:paddingBottom="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_7"
                android:paddingStart="@dimen/dp_7"
                android:paddingTop="@dimen/dp_2"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                tools:text="¥28800" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_course_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_10"
                tools:text="参加人数：360" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>