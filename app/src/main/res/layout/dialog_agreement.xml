<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dp_70"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/WarmPrompt"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/agreementTitle"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txt_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/agreementTitle2"
            android:textColor="@color/color_E84342"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/agreementTitle3"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:stateListAnimator="@drawable/shape_selector_elevation"
            android:text="@string/cancel"
            android:textColor="@color/color_666666"
            android:textSize="16sp"
            app:rv_backgroundColor="@android:color/white"
            app:rv_backgroundPressColor="@color/color_E6E6E6"
            app:rv_cornerRadius_BL="@dimen/dp_8"
            tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute" />

        <View
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_E6E6E6" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:stateListAnimator="@drawable/shape_selector_elevation"
            android:text="@string/confirm"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:rv_backgroundColor="@android:color/white"
            app:rv_backgroundPressColor="@color/color_E6E6E6"
            app:rv_cornerRadius_BR="@dimen/dp_8"
            tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute" />
    </LinearLayout>

</com.flyco.roundview.RoundLinearLayout>