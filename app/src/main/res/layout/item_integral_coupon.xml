<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_26"
    android:paddingStart="@dimen/dp_26"
    android:paddingTop="@dimen/dp_14">

    <LinearLayout
        android:id="@+id/linear_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@mipmap/icon_usable_coupon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="RtlCompat">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.9"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RMB"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_coupons_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_28"
                tools:text="150" />

            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_discount"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_12">

            <TextView
                android:id="@+id/item_coupons_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                tools:text="满1200元减150" />

            <TextView
                android:id="@+id/item_coupons_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                tools:text="有效期至2018.07.13 15:15:00" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/item_coupons_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_5"
                android:paddingStart="@dimen/dp_5"
                android:textColor="@color/color_FD7D74"
                android:textSize="@dimen/sp_11"
                app:rv_backgroundColor="@android:color/white"
                app:rv_isRadiusHalfHeight="true"
                tools:text="仅限正课使用" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:textColor="@color/color_0267FF"
        android:textSize="@dimen/sp_13"
        tools:text="2000积分" />

</LinearLayout>