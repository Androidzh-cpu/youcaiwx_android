<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ucfo.youcai.view.questionbank.activity.SelfServiceChildListActivity">

    <include layout="@layout/titlebar_toolbar" />

    <com.ucfo.youcai.widget.customview.LoadingLayout
        android:id="@+id/loadinglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/shape_selftextback"
                android:gravity="center"
                android:text="@string/question_tips_checkquestionnumber3"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_tips_max3know"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:choiceMode="multipleChoice"
                android:divider="@color/color_E6E6E6"
                android:dividerHeight="@dimen/dp_0_5"
                android:overScrollMode="never"
                android:scrollbarSize="@dimen/dp_1"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btn_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:background="@mipmap/icon_btnbackprimary"
                android:gravity="center"
                android:stateListAnimator="@drawable/shape_selector_elevation"
                android:text="@string/question_start_exercise"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </com.ucfo.youcai.widget.customview.LoadingLayout>

</LinearLayout>
