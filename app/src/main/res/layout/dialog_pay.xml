<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/pay_confirm_pay"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/icon_closebtn2" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:layout_gravity="center_vertical"
        android:background="@color/color_F5F5F5"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="@string/pay_checkPayMode"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13" />
    <!--支付方式-->

    <TextView
        android:id="@+id/btn_WechatPay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableEnd="@mipmap/icon_right_in"
        android:drawablePadding="@dimen/dp_5"
        android:drawableStart="@drawable/ic_icon_wechatpay"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/pay_WeChatPay"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@color/color_E6E6E6" />

    <TextView
        android:id="@+id/pay_Alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableEnd="@mipmap/icon_right_in"
        android:drawablePadding="@dimen/dp_5"
        android:drawableStart="@drawable/ic_icon_alipay"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/pay_Alipay"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="@color/color_F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingEnd="@dimen/dp_6"
            android:paddingStart="@dimen/dp_6"
            android:text="@string/pay_havereaded"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/btn_paynotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_notice"
            android:textColor="@color/color_0267FF"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>