<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_6"
    android:paddingRight="@dimen/dp_6">

    <ImageView
        android:id="@+id/item_live_image"
        android:layout_width="@dimen/dp_154"
        android:layout_height="@dimen/dp_77"
        android:src="@mipmap/icon_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_live_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_live_image" />

    <TextView
        android:id="@+id/item_live_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_live_title" />

    <TextView
        android:id="@+id/item_live_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/item_home_orangeback"
        android:gravity="center"
        android:minWidth="@dimen/dp_53"
        android:paddingBottom="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_7"
        android:paddingStart="@dimen/dp_7"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/color_F88C00"
        android:textSize="@dimen/sp_11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_live_title" />

</android.support.constraint.ConstraintLayout>