<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/net_loading_bg"
        android:minHeight="@dimen/dp_118"
        android:minWidth="@dimen/dp_118">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.ucfo.youcai.widget.customview.LoadingView
                android:id="@+id/loadingview"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loadingview"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/net_loadingtext"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>