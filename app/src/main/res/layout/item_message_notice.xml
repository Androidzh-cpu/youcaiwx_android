<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_4"
    android:paddingEnd="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12"
    android:paddingTop="@dimen/dp_17"
    tools:ignore="RtlCompat">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:gravity="center"
        android:minWidth="@dimen/dp_104"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        app:rv_backgroundColor="@color/color_CCCCCC"
        app:rv_cornerRadius="@dimen/dp_3"
        tools:text="2018.01.01 18:01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_11"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_11">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="重新定义CMA-优财CMA产品5.0新高度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:elevation="@dimen/dp_3"
            android:translationZ="@dimen/dp_3"
            android:id="@+id/item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="根据交易所消息，嘉友国际物流股份有限公司首次公开发行股票网上定价发行有效申购户数为14，570股票网上定价发行有效申…"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

</LinearLayout>